<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragments.fashionfragment.view.FashionFragment">
    <LinearLayout
        android:id="@+id/ln_tb_fashion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">



            <include layout="@layout/toolbar_fashion" />
        </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/ln_tb_fashion"
        android:id="@+id/recycle_Fashion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
    <androidx.appcompat.widget.AppCompatImageButton
       android:id="@+id/img_btn_fashion"
        android:layout_width="@dimen/width_height_img_fashion_80dp"
        android:layout_height="@dimen/width_height_img_fashion_80dp"
        android:src="@drawable/ic_floating_btn_fashion"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/margin_10dp"
        />
</RelativeLayout>