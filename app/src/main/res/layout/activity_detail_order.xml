<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detailorder.view.DetailOrderActivity">

    <LinearLayout
        android:id="@+id/lntbnotiorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:weightSum="5">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgTbDetailOrderBack"
            style="@style/SettingAppCompatImageViewNextItemUserStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="0.5"
            android:src="@drawable/ic_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTbDetailOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/tv_tb_detail_order"
            android:textColor="@color/Black"
            android:textSize="@dimen/tv_size_20sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgTbDetailOrderHelp"
            style="@style/SettingAppCompatImageViewNextItemUserStyle"
            android:layout_weight="0.5"
            android:src="@drawable/ic_help" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/Gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_address" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_lb_address"
                        android:textColor="@color/corlortextĐetailOrder"
                        android:textSize="@dimen/tv_size_18sp" />

                    <TextView
                        android:id="@+id/tvDetailOrderNameCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="Hoàng Minh Hiếu"
                        android:textSize="@dimen/tv_size_16sp" />

                    <TextView
                        android:id="@+id/tvDetailOrderPhoneCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:text="0343687878"
                        android:textSize="@dimen/tv_size_16sp" />

                    <TextView
                        android:id="@+id/tvDetailOrderAddressCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:text="Số nhà 5 ngõ 79 đường cầu giấy thành phố hà nội "
                        android:textSize="@dimen/tv_size_16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delivery" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:src="@drawable/ic_dot" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_lb_detail_order_delivery"
                        android:textColor="@color/corlortextĐetailOrder"
                        android:textSize="@dimen/tv_size_18sp" />

                    <TextView
                        android:id="@+id/tvDetailOrderStatusDelivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="Đã giao hàng"
                        android:textColor="@color/corlortextDetailOrderStatus"
                        android:textSize="@dimen/tv_size_20sp" />

                    <TextView
                        android:id="@+id/tvDetailOrderRecipientOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="Giao hàng tiết kiệm"
                        android:textSize="@dimen/tv_size_16sp" />

                    <TextView
                        android:id="@+id/tvDetailOrderDateTimeReceiverShip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:text="12/10/2019  5:98"
                        android:textSize="@dimen/tv_size_16sp" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10dp"
                android:background="@color/Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_money" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_lb_detail_order_payment"
                        android:textColor="@color/corlortextĐetailOrder"
                        android:textSize="@dimen/tv_size_18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:fontFamily="@font/noto_sans_regular"
                            android:text="Tổng tiền hàng"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvDetailOrderToTalMoneyOrder"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:fontFamily="@font/noto_sans_regular"
                            android:gravity="right"
                            android:text="$ 34.00"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:fontFamily="@font/noto_sans_regular"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="@string/tv_lb_detail_order_delivery_cheep"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvDetailOrderMoneyDelivery"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:gravity="right"
                            android:text="$ 1.00"
                            android:fontFamily="@font/noto_sans_regular"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:gravity="center_vertical"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:fontFamily="@font/noto_sans_regular"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_lb_discount_delivery"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvDetailOrderMoneyDiscountDelivery"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:fontFamily="@font/noto_sans_regular"
                            android:text="$ 2.00"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10dp"
                android:background="@color/Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_lb_detailorder_paymentmethod"
                    android:textColor="@color/corlortextĐetailOrder"
                    android:textSize="@dimen/tv_size_18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_payment_method" />

                    <TextView
                        android:id="@+id/tvDetailOrderPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_15dp"
                        android:text="@string/tv_payment_method_detailorder"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10dp"
                android:background="@color/Gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_15dp">

                <TextView
                    android:id="@+id/tvDetailOrderNameShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_detailorder_name_shop"
                    android:textColor="@color/corlortextĐetailOrder"
                    android:textSize="@dimen/tv_size_18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_next" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleDetailOrderItemCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvIdDonHang"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/tv_detailorder_id_order"
                        android:textColor="#BC0C0101"
                        android:fontFamily="@font/noto_sans_regular"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvDetailOrderIdOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:layout_toEndOf="@+id/tvIdDonHang"
                        android:text="@string/tv_display_detailorder_id_order"
                        android:fontFamily="@font/noto_sans_regular"
                        android:textColor="@color/corlortextĐetailOrder"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTimeOrder"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/tv_lb_detail_order_time_order"
                        android:textColor="#BC0C0101"
                        android:fontFamily="@font/noto_sans_regular"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvDetailOrderTimeOrder"
                        android:layout_width="wrap_content"
                        android:layout_toEndOf="@+id/tvTimeOrder"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_alignParentEnd="true"
                        android:text="12-4-1203 6:45"
                        android:fontFamily="@font/noto_sans_regular"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTimePaymentLable"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/tv_lb_detailorder_time_payment"
                        android:textColor="#BC0C0101"
                        android:fontFamily="@font/noto_sans_regular"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvDetailOrderTimePayment"
                        android:layout_width="wrap_content"
                        android:layout_toEndOf="@+id/tvTimePaymentLable"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="12-4-2019 6:45"
                        android:gravity="end"
                        android:fontFamily="@font/noto_sans_regular"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDivery"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/tv_lb_detialorder_deliver"
                        android:textColor="#BC0C0101"
                        android:fontFamily="@font/noto_sans_regular"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvDetailOrderTimedeliver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="12-4-2019 7:45"
                        android:gravity="end"
                        android:layout_toEndOf="@+id/tvDivery"
                        android:fontFamily="@font/noto_sans_regular"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLable_PaymentSaler"
                        android:layout_width="@dimen/_150sdp"
                        android:fontFamily="@font/noto_sans_regular"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/tv_lb_detailorder_saler"
                        android:textColor="#BC0C0101"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvDetailOrderTimePaySaler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_toEndOf="@+id/tvLable_PaymentSaler"
                        android:layout_alignParentEnd="true"
                        android:text="12-4-2019 7:45"
                        android:fontFamily="@font/noto_sans_regular"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_20sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_7dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_bg_btn_detail_order"
                    android:gravity="center_vertical|center"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_message_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:padding="@dimen/margin_5dp"
                        android:text="Liên hệ"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_7dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_bg_btn_detail_order"
                    android:gravity="center_vertical|center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/padding_15dp"
                    android:paddingBottom="@dimen/padding_15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_visit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:text="@string/tv_lb_detailorder_visit"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>