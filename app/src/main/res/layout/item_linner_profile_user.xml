<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ln_itemProfile"
    android:background="@drawable/bg_selector"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
    <View
        android:layout_marginLeft="@dimen/padding_15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray"
        />
    <RelativeLayout
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_alignParentStart="true"
        android:id="@+id/im_item_profile"
        android:layout_width="@dimen/padding_30dp"
        android:layout_height="@dimen/padding_30dp"
        android:src="@drawable/ic_card_service" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_profile"
        android:layout_toEndOf="@+id/im_item_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/im_item_next_profile"
        android:textColor="@color/corlor_tv_black"
        android:layout_marginStart="@dimen/padding_15dp"
        android:layout_centerInParent="true"
        android:textSize="@dimen/tv_size_16sp"
        android:text="Đơn Mua" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/im_item_next_profile"
        android:layout_width="@dimen/padding_30dp"
        android:layout_alignParentEnd="true"
        android:layout_height="@dimen/padding_30dp"
        android:src="@drawable/ic_next" />
    </RelativeLayout>

</LinearLayout>



